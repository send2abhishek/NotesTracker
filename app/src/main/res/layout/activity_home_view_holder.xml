<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abhishek Aryan"
            android:id="@+id/home_activity_view_name"
            android:textColor="#2C2E2C"
            android:textSize="16sp"
            android:fontFamily="Roboto"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_activity_view_email"
            android:layout_below="@id/home_activity_view_name"
            android:text="send2abhishek@live.com"
            android:textColor="#B7BDBA"
            android:textSize="12sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_activity_view_country"
            android:text="India"
            android:layout_alignParentRight="true"
            android:textColor="#2C2E2C"
            android:textSize="16sp"
            />


    </RelativeLayout>

</LinearLayout>